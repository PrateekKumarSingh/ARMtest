{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "actionGroups_email_name": {
            "defaultValue": "email",
            "type": "String"
        },
        "accounts_textanalyticsprateek_name": {
            "defaultValue": "textanalyticsprateek",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[parameters('accounts_textanalyticsprateek_name')]",
            "location": "centralindia",
            "sku": {
                "name": "F0"
            },
            "kind": "TextAnalytics",
            "properties": {
                "customSubDomainName": "[parameters('accounts_textanalyticsprateek_name')]"
            }
        },
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "[parameters('actionGroups_email_name')]",
            "location": "Global",
            "properties": {
                "groupShortName": "em",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "[concat(parameters('actionGroups_email_name'), '_-EmailAction-')]",
                        "emailAddress": "prateeksingh1590@gmail.com",
                        "useCommonAlertSchema": false
                    }
                ],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
                "azureFunctionReceivers": []
            }
        }
    ]
}
